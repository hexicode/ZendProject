<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/contact_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/no_image"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dip"
                        android:contentDescription="Contact Image"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/company_association"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:text="Hexicode inc."
                        android:gravity="end" />

                    <TextView
                        android:id="@+id/contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Brian Vazquez"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:paddingLeft="10dp"/>

                    <TextView android:id="@+id/contact_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="562-356-7588"
                        android:paddingLeft="10dp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end|center_horizontal"
                android:text="vazquez.brian.theory@gmail.com"
                android:paddingLeft="10dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>
